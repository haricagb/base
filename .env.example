# .env.example

# PostgreSQL
POSTGRES_USER=app_user
POSTGRES_PASSWORD=changeme
POSTGRES_DB=robotics_mgmt

# Go API
APP_ENV=dev
APP_SERVER_PORT=3000
APP_DATABASE_HOST=postgres
APP_DATABASE_PASSWORD=changeme
APP_JWT_SECRET=change-me-minimum-32-characters!!

# Hasura
HASURA_GRAPHQL_ADMIN_SECRET=change-me-in-production
HASURA_GRAPHQL_JWT_SECRET='{"type":"HS256","key":"change-me-minimum-32-characters!!","claims_map":{"x-hasura-user-id":{"path":"$.user_id"},"x-hasura-default-role":{"path":"$.role"},"x-hasura-allowed-roles":["mta","eta","caregiver","family","robot"],"x-hasura-enterprise-id":{"path":"$.enterprise_id","default":""},"x-hasura-robot-id":{"path":"$.robot_id","default":""}}}'

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_FILE=/path/to/firebase-credentials.json

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_ENDPOINT=localhost:4317
OTEL_SERVICE_NAME=sona-api

# Digital Ocean (Terraform)
# TF_VAR_do_token=your-digital-ocean-api-token
